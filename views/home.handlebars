<h1 class="heading"> BURGER TIME! </h1>

<div class="box1">
  <h2> Burgers to be devoured </h2>
  <ul id="devour">
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burgers }}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="box2">
  <h2> Burgers that have been devoured </h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/devoured }}
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class="add">
  <h2>Add a Burger</h2>
  <form>
    <div>
      <label>Burger Name:</label>
      <input id="bName">
      <button id="add">Add Burger</button>
    </div>
  </form>
</div>
